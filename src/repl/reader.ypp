%{
  #define YYSTYPE Data*
  #include "reader.h"
  #include <iostream>
  extern int yylex();
  extern int yyerror(Data**, char*);
  SymbolTable * symbol_table = new SymbolTable();
%}

%token INTEGER
%token SYMBOL
%parse-param { Data **expr }

%%

line:
/* empty */
//| line 
| line atom { *expr = $2; printf("parse complete.\n"); YYACCEPT; }
| line list { *expr = $2; printf("parse complete.\n"); YYACCEPT; }
| line quote { *expr = $2; printf("parse complete.\n"); YYACCEPT; }
;

atom:
INTEGER
| SYMBOL
;

quote:
'\'' atom { $$ = cons(internSymbol("quote", symbol_table), cons($2, NIL)); }
| '\'' list { $$ = cons(internSymbol("quote", symbol_table), cons($2, NIL)); }
;

list:
'(' sexp ')' { $$ = $2; }
;

sexp:
atom { $$ = cons($1, NIL); }
| list { $$ = cons($1, NIL); }
| atom sexp { $$ = cons($1, $2); }
| list sexp { $$ = cons($1, $2); }
| quote { $$ = cons($1, NIL); }
| quote sexp { $$ = cons($1, $2); }
;

%%
#include "fuji.h"

Data* cons(Data * x, Data * y)
{
    return new Cons(x, y);
}

Data* internSymbol(char * str, SymbolTable * symtab)
{
    return symtab->InternSymbol(str);
}

Data* makeInt(char * str)
{
    return new Number(atoi(str));
}

int yyerror( Data** dat, char *str )
{
  printf("reader error: %s\n", str);
}

int yywrap()
{
  return 1;
}

class ReaderExcept : public Exception {
    public:
        ReaderExcept(const char *caller_, const std::string message_) : Exception(caller_, message_) {}
};

Data* NumberAdd(std::vector<Data*> args)
{
    if( !args.empty() ) {
        int num_val = 0;
        std::vector<Data*>::iterator it = args.begin();
        for( ; it != args.end(); ++it) 
            if( (*it)->IsAtom() && ((Atom*)*it)->IsNumber() ) 
                num_val += ((Number*)*it)->GetValue();
            else throw new ReaderExcept("NumberAdd","");
        return new Number(num_val);
    }
    throw new ReaderExcept("NumberAdd","");
}

Data* NumberMinus(std::vector<Data*> args)
{
    if( !args.empty() ) {
        int num_val = 0;
        std::vector<Data*>::iterator it = args.begin();
        if( (*it)->IsAtom() && ((Atom*)*it)->IsNumber() ) {
            num_val = ((Number*)*it)->GetValue();
            ++it;
            for( ; it != args.end(); ++it) 
                if( (*it)->IsAtom() && ((Atom*)*it)->IsNumber() ) 
                    num_val -= ((Number*)*it)->GetValue();
                else throw new ReaderExcept("NumberMinus","");
            return new Number(num_val);
        }
    }
    throw new ReaderExcept("NumberMinus","");
}

Data* NumberMul(std::vector<Data*> args)
{
    if( !args.empty() ) {
        int num_val = 1;
        std::vector<Data*>::iterator it = args.begin();
        for( ; it != args.end(); ++it) 
            if( (*it)->IsAtom() && ((Atom*)*it)->IsNumber() ) 
                num_val *= ((Number*)*it)->GetValue();
            else throw new ReaderExcept("NumberMul","");
        return new Number(num_val);
    }
    throw new ReaderExcept("NumberMul","");
}

Data* GetRefCount(std::vector<Data*> args)
{
    if( !args.empty() )
        return new Number(args[0]->GetRefs());
    throw new ReaderExcept("GetRefCount","");
}

Data* Equals(std::vector<Data*> args)
{
    if( args.size() == 2 )
        if( args[0]->IsAtom() && args[1]->IsAtom() )
            if( ((Atom*)args[0])->IsNumber() && ((Atom*)args[1])->IsNumber() )
                return new Bool(((Number*)args[0])->GetValue() == ((Number*)args[1])->GetValue());
    throw new ReaderExcept("Equals","");
}

Data* ReaderCons(std::vector<Data*> args)
{
    if( args.size() == 2 )
        return new Cons(args[0], args[1]);
    throw new ReaderExcept("ReaderCons","");
}

Data* Null(std::vector<Data*> args)
{
    if( args.size() == 1 )
        return new Bool(args[0]->IsNil());
    throw new ReaderExcept("Null","");
}

